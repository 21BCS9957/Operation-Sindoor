{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "start_cmd": "./target/release/sindoor-backend"
    }
  },
  "deploy": {
    "startCommand": "./target/release/sindoor-backend",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
} 